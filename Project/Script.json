{document.getElementById("error2").innerHTML="*Fill in your details !"};
if(rol=="" || rol==" ")
{document.getElementById("error3").innerHTML="*Fill in your details !"};
if(bro=="" || bro==" ")
{document.getElementById("error4").innerHTML="*Fill in your details !"};
if(email=="" || email==" ")
{document.getElementById("error5").innerHTML="*Fill in your details !"};

};

function hey(){

    collect();
    let p=prompt("Enter your Test subject name ðŸ‘‡ (CSS/JavaScript/HTML)");
    console.log(p);
    let arr=["javascript","JavaScript","Javascript","HTML","html","CSS","css","Css"];
    let count=0;
    for(let i=0;i<8;i++)
    {
        if(p===arr[i])
        {count=0;break;}
        else
        count=1;
    }
    if(count===1){window.alert("Enter the correct subject"); hey();}
    localStorage.setItem("SUBJECT",p);
    console.log(p);
};


